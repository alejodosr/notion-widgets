<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <!-- Add the Typed.js library -->
  <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
  <style>
    /* Add your custom styles here */
    #carouselExample {
      margin-top: 20px;
      height: 500px; /* Set a fixed height for the carousel */
    }

    #carouselExample img {
      max-width: 100%;
      height: auto;
    }

    .carousel-title-container {
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 10px;
    }

    .carousel-title {
      font-family: monospace;
      font-size: 1.0rem;
      font-style: italic;
      text-align: left;
    }
    
    .carousel-input {
      font-family: monospace;
      font-size: 1.0rem;
      font-style: italic;
      font-weight: bold;
      text-align: left;
    }

    .carousel-image-container {
      border: 1px solid #ccc;
      padding: 10px;
    }

    .carousel-divider {
      border-top: 1px solid #ccc;
      margin-top: 10px;
      margin-bottom: 10px;
    }

    .blurred-image {
      filter: blur(20px); /* Set the desired blur amount */
    }
  </style>
  <title>Responsive Carousel</title>
</head>
<body>

<div class="container">
  <div id="carouselExample" class="carousel slide" data-ride="carousel" data-interval="20000">
    <div class="carousel-inner">
      <!-- Slide 3 -->
      <div class="carousel-item active">
        <div class="carousel-title-container">
          <h3 class="carousel-input">You ask us:<br> </h3>
          <!-- Add a span element to hold the typed text -->
          <h3 class="carousel-title"><span id="typed-text"></span></h3>
        </div>
      </div>
    </div>
    <!-- Navigation Arrows -->
    <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <!-- Carousel Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#carouselExample" data-slide-to="0" class="active"></li>
    </ol>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Set up Typed.js
    var typed = new Typed('#typed-text', {
      strings: ['"Hello, this is an acoustic love song. Can you create a couple made of clay? <mark>Add a Pro Title too.</mark> Thank you!"'],
      typeSpeed: 40, // typing speed in milliseconds
      showCursor: false, // hide the cursor
    });

    // Remove blur after image loads
    var images = document.querySelectorAll('.blurred-image');

    images.forEach(function(image) {
      image.onload = function() {
        image.classList.remove('blurred-image');
      };
      image.src = image.dataset.src;
    });
  });
</script>

</body>
</html>
